{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node", "jest"]
  },
  "include": ["engine/**/*", "policy/**/*", "logging/**/*", "safety/**/*", "agents/**/*", "llm/**/*", "ops-console/**/*"]
}
